<div class="container">
	<div class="row mb-3">
		<div class="col">
			<%= link_to 'トップページへ戻る', root_path, class: "h5 text-info" %>
		</div>
	</div>
	<h2 class="display-5 border-bottom border-info mb-5">小説を書く・読む</h2>
	<div class="row">
		<div class="col">
			<%= link_to '第１話を書く', new_story_path, class: "btn btn-info btn-lg btn-block" %>
		</div>
		<div class="col">
			<%= link_to '小説を探す', new_story_path, class: "btn btn-info btn-lg btn-block" %>
		</div>
	</div>
	<div class="row-center mt-5 mb-3">
		<h2 class="display-5 border-bottom border-info mb-5">投稿した小説</h2>
		<div class="row">
			<% @stories.each do |story| %>
				<div class="col-lg-6 col-mb-12">
					<div class="card mb-3">
						<div class="card-body">
							<h5><%= link_to story.novel.title, novel_path(story.novel.id), class: "card-title text-info" %></h5>
							<h6><%= link_to "#{story.level + 1}話 #{story.subtitle}", story_path(story.id), class: "h6 card-subtitle mb-2 text-info" %></h6>
							<p class="card-text"><small class="text-muted">
							<%= story.created_at.strftime('%Y/%m/%d')%>&nbsp;&nbsp;&nbsp;&nbsp;<%= story.penname %>
							</small></p>
						</div>
					</div>
				</div>
			<% end%>
		</div>
	</div>
</div>