<div class="container">
    <h2>小説の一覧</h2>
    <% @novels.each do |novel| %>
        <div class="card">
            <h5 class="card-title"><%= link_to novel.title, novel_path(novel) %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= novel.summary%></h6>
        </div>
    <% end %>
</div>