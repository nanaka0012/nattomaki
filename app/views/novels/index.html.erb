<div class="container">
	<div class="row mb-3">
		<div class="col">
			<%= link_to 'トップページへ戻る', root_path, class: "h5 text-info" %>
		</div>
	</div>
	<h2 class="display-5 border-bottom border-info mb-5">小説の一覧</h2>
		<div class="row">
			<% @novels.each do |novel| %>
				<div class="col-lg-6 col-mb-12">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title"><%= link_to novel.title, novel_path(novel), class: "text-info" %></h5>
							<p class="card-subtitle text-muted">
								<%= novel.created_at.strftime('%Y/%m/%d')%>&nbsp;&nbsp;
								<%= t("enums.novel.genre."+"#{novel.genre}") %>&nbsp;&nbsp;
								全<%= novel.series%>話で完結
							</p>
							<p class="card-text mb-2"><%= novel.summary.truncate(120)%></p>
						</div>
					</div>
				</div>
			<% end %>
		</div>
</div>